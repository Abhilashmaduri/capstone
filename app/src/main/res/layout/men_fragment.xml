<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar_MenFragment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Men's FootWear"
        android:background="@color/DodgerBlue"
        app:titleTextColor="@color/White"
        />
    <com.google.android.material.tabs.TabLayout
        android:layout_below="@id/Toolbar_MenFragment"
        android:id="@+id/TabLayoutInMenFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/Green"
        app:tabIndicatorColor="@color/DarkGreen"
        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPagerInMenFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>