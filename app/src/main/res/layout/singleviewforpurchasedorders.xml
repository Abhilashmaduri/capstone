<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImageOfPurchasedProduct"
        android:layout_width="150dp"
        android:layout_height="150dp"
        />
    <LinearLayout
        android:id="@+id/LinearLayout1_MyOrders"
        android:layout_toRightOf="@id/ImageOfPurchasedProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/ProductTitle_MyOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
       <TextView
           android:id="@+id/Price_MyOrders"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           />
        <TextView
            android:id="@+id/Quantity_MyOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/Size_MyOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>