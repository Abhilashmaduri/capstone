<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_wishlist"
    tools:context=".BottomNavigationThings.Profile.A_WishList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/Toolbar_WishList"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:titleTextColor="@color/White"
      android:background="@color/DodgerBlue"
      app:navigationIcon="@drawable/back_navigation"
      app:title="My WishList"
      />
     <com.google.android.material.card.MaterialCardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:id="@+id/NoOf_WishListed_Products"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             />
     </com.google.android.material.card.MaterialCardView>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/RecyclerView_wishList"
       android:layout_below="@id/Toolbar_WishList"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       />
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>